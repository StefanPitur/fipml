fun is_even (x : int) : bool = {
  let pred_x = x - 1 in
  if x > 0 then { is_odd (pred_x) } else { true } endif
}

and fun is_odd (x : int) : bool = {
  let pred_x = x - 1 in
  if x > 0 then { is_even (pred_x) } else { false } endif
}

fun add (x : int) (y : int) : int = {
  x + y
}

{
  let sum_x_y = add (4, 5) in
  is_even (sum_x_y)
}
